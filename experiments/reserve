#!/bin/bash

if [ "$#" -lt 2 ]
then
	echo "Usage $0 PROPERTIES_FILE DURATION_IN_MINUTES [OFFSET_IN_MINUTES] [NODE_URNS]"
	echo "Example: $0 ../live.properties 30 10 urn:wisebed:uzl1:0xcbe4"
	exit 1
fi

java -Dtestbed.duration=$2 -Dtestbed.offset=$3 -Dtestbed.nodeurns=$4 -jar ../wisebed-cmdline-client/target/tr.wisebed-cmdline-client-0.5.5-SNAPSHOT.one-jar.jar -p $1 -f reserve.java
