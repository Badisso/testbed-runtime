<ns2:testbed xmlns:ns2="http://itm.uniluebeck.de/tr/xml">


	<nodes id="opium">
		<names>

			<nodename name="urn:wisebed:uzl:opium" description=""/>

		</names>
		<serverconnections>
			<serverconnection type="tcp" address="opium.itm.uni-luebeck.de:10001"/>
		</serverconnections>
		<applications>
				<application name="WSNApp" factoryclass="de.uniluebeck.itm.tr.runtime.wsnapp.WSNDeviceAppFactory">
				<wsn:wsnapp xmlns:wsn="http://itm.uniluebeck.de/tr/runtime/wsnapp/xml">
					<device>
						<urn>urn:wisebed:uzl:opium</urn>
						<id>420</id>
						<type>isense</type>
						<serialinterface>/dev/tty.usbserial-00002006</serialinterface>
					</device>
				</wsn:wsnapp>
			</application>
		</applications>
	</nodes>


	<nodes id="tripper">
		<names>
			<nodename name="urn:wisebed:uzl:tripper" description=""/>

		</names>
		<serverconnections>
			<serverconnection type="tcp" address="tripper.itm.uni-luebeck.de:40001"/>
		</serverconnections>
		<applications>
			<application name="PortalServer" factoryclass="de.uniluebeck.itm.tr.runtime.portalapp.PortalServerFactory">
				<portal:portalapp xmlns:portal="http://itm.uniluebeck.de/tr/runtime/portalapp/xml">
					<webservice>
						<urnprefix>urn:wisebed:uzl:</urnprefix>
						<sessionmanagementendpointurl>http://tripper.itm.uni-luebeck.de:8080/sessions</sessionmanagementendpointurl>
						<wsninstancebaseurl>http://tripper.itm.uni-luebeck.de:8080/wsn/</wsninstancebaseurl>
						<wisemlfilename>configs/various/wiseml.xml</wisemlfilename>
					</webservice>
				</portal:portalapp>
			</application>
		</applications>
	</nodes>
</ns2:testbed>
