<ns2:testbed xmlns:ns2="http://itm.uniluebeck.de/tr/xml"
             xmlns:ns3="http://itm.uniluebeck.de/tr/runtime/portalapp/xml"
             xmlns:ns4="http://itm.uniluebeck.de/tr/runtime/wsnapp/xml">

    <nodes id="portal">
        <names>
            <nodename name="portal"/>
        </names>
        <serverconnections>
            <serverconnection address="wisebed.itm.uni-luebeck.de:8880" type="tcp"/>
        </serverconnections>
        <applications>
            <application factoryclass="de.uniluebeck.itm.tr.runtime.portalapp.PortalServerFactory" name="Portal">
                <ns3:portalapp>
                    <webservice>
                        <urnprefix>urn:wisebed:uzl1:</urnprefix>
                        <sessionmanagementendpointurl>http://wisebed.itm.uni-luebeck.de:8888/sessions</sessionmanagementendpointurl>
                        <wsninstancebaseurl>http://wisebed.itm.uni-luebeck.de:8888/wsn/</wsninstancebaseurl>
                        <reservationendpointurl>http://wisebed.itm.uni-luebeck.de:8889/rs</reservationendpointurl>
                        <wisemlfilename>testbeduzl1-wiseml.xml</wisemlfilename>
                    </webservice>
                </ns3:portalapp>
            </application>
        </applications>
    </nodes>

    <nodes id="testbeduzl01.itm.uni-luebeck.de">
        <names>
            <nodename name="urn:wisebed:uzl1:1" description=""/>
            <nodename name="urn:wisebed:uzl1:2" description=""/>
        </names>
        <serverconnections>
            <serverconnection address="testbeduzl01.itm.uni-luebeck.de:8880" type="tcp"/>
        </serverconnections>
        <applications>
            <application factoryclass="de.uniluebeck.itm.tr.runtime.wsnapp.WSNDeviceAppFactory" name="WSNDeviceApp">
                <ns4:device>
                    <urn>urn:wisebed:uzl1:1</urn>
                    <type>isense</type>
                </ns4:device>
            </application>
            <application factoryclass="de.uniluebeck.itm.tr.runtime.wsnapp.WSNDeviceAppFactory" name="WSNDeviceApp">
                <ns4:device>
                    <urn>urn:wisebed:uzl1:2</urn>
                    <type>isense</type>
                </ns4:device>
            </application>
        </applications>
    </nodes>

    <nodes id="testbeduzl02.itm.uni-luebeck.de">
        <names>
            <nodename name="urn:wisebed:uzl1:3" description=""/>
            <nodename name="urn:wisebed:uzl1:4" description=""/>
        </names>
        <serverconnections>
            <serverconnection address="testbeduzl02.itm.uni-luebeck.de:8880" type="tcp"/>
        </serverconnections>
        <applications>
            <application factoryclass="de.uniluebeck.itm.tr.runtime.wsnapp.WSNDeviceAppFactory" name="WSNDeviceApp">
                <ns4:device>
                    <urn>urn:wisebed:uzl1:3</urn>
                    <type>isense</type>
                </ns4:device>
            </application>
            <application factoryclass="de.uniluebeck.itm.tr.runtime.wsnapp.WSNDeviceAppFactory" name="WSNDeviceApp">
                <ns4:device>
                    <urn>urn:wisebed:uzl1:4</urn>
                    <type>isense</type>
                </ns4:device>
            </application>
        </applications>
    </nodes>

</ns2:testbed>
